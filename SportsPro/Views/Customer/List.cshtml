@model IEnumerable<SportsPro.Models.Customer>

@{
    ViewData["Title"] = "Customer Manager";
}

<h1>Customer Manager</h1>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">Add Customer</a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>City</th>
                
                <th class="text-center"></th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.FirstName + " " + item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.CustomerID" class="btn btn-sm btn-primary">Edit</a>
                    </td>

                    <td class="text-center">
                        <a asp-action="Delete" asp-route-id="@item.CustomerID" class="btn btn-sm btn-primary">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>