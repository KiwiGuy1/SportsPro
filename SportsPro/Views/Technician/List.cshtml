@model IEnumerable<SportsPro.Models.Technician>

@{
    ViewData["Title"] = "Technician Manager";
}
<h2 class="mt-4">Technician Manager</h2>



<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th class="text-center"></th>
            <th class="text-center"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Name != "Not assigned")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.TechnicianID" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Delete" asp-route-id="@item.TechnicianID" class="btn btn-sm btn-primary">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">Add Technician</a>
</div>