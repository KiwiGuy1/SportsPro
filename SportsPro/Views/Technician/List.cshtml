@model IEnumerable<SportsPro.Models.Technician>

@{
    ViewData["Title"] = "Technician Manager";
}
    <h2 class="mt-4">Technician Manager</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">Add Technician</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.Name != "Not assigned")
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.TechnicianID" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.TechnicianID" class="btn btn-sm btn-info text-white">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.TechnicianID" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
