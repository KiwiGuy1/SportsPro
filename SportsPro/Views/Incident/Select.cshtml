@model SportsPro.ViewModels.TechnicianIncidentViewModel

@{
    ViewData["Title"] = "Select Technician";
}

<h2>Select Technician</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="IncidentsByTech" method="post">
    <div class="mb-3">
        <label asp-for="TechnicianId" class="form-label">Technician</label>
        <select asp-for="TechnicianId" asp-items="Model.Technicians" class="form-select">
            <option value="">-- Select Technician --</option>
        </select>
        <span asp-validation-for="TechnicianId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Select</button>
</form>
