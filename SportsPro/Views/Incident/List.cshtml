@model SportsPro.ViewModels.TechnicianIncidentViewModel

@{
    ViewData["Title"] = "Incident Manager";
}

<h1>Incident Manager</h1>

<div class="mb-3">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link @(Model.Filter == "All" ? "active" : "")"
               asp-action="List" asp-route-filter="All">
                All incidents
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.Filter == "Unassigned" ? "active" : "")"
               asp-action="List" asp-route-filter="Unassigned">
                Unassigned incidents
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.Filter == "Open" ? "active" : "")"
               asp-action="List" asp-route-filter="Open">
                Open incidents
            </a>
        </li>
    </ul>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Date Opened</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Incidents)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Customer.FullName</td>
                <td>@item.Product.Name</td>
                <td>@item.DateOpened</td>
                <td class="text-center">
                    <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@item.IncidentID">Edit</a>
                </td>
                <td class="text-center">
                    <a asp-action="Delete" class="btn btn-sm btn-primary" asp-route-id="@item.IncidentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Incident</a>
</p>