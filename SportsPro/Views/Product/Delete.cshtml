@model SportsPro.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <h3>Are you sure you want to delete this?</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label class="control-label">@Html.DisplayNameFor(model => model.ProductCode)</label>
            <input class="form-control" value="@Model.ProductCode" disabled />
        </div>
        <div class="form-group">
            <label class="control-label">@Html.DisplayNameFor(model => model.Name)</label>
            <input class="form-control" value="@Model.Name" disabled />
        </div>
        <div class="form-group">
            <label class="control-label">@Html.DisplayNameFor(model => model.YearlyPrice)</label>
            <input class="form-control" value="@Model.YearlyPrice" disabled />
        </div>
        <div class="form-group">
            <label class="control-label">@Html.DisplayNameFor(model => model.ReleaseDate)</label>
            <input class="form-control" type="datetime-local"
                   value="@Model.ReleaseDate.ToString("yyyy-MM-ddTHH:mm")" disabled />
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProductID" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
                <a asp-action="List" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>
